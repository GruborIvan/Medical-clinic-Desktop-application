<Window x:Class="Ordinacija.Features.Patients.AddNewPatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Patient" WindowState="Maximized"
        Background="#F4F4F4">
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
        <DropShadowEffect x:Key="ButtonShadowEffect" BlurRadius="8" Opacity="0.3" ShadowDepth="3"/>
    </Window.Resources>

    <Grid Margin="20" Background="#F0F4F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TitleText}" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" 
               Margin="0 0 0 30" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0 0 30 0">
                <TextBlock Text="Ime*" Foreground="#34495E" Margin="0 0 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.FirstName}" FontSize="18"/>
                </Border>

                <TextBlock Text="Prezime*" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.LastName}" FontSize="18"/>
                </Border>

                <TextBlock Text="Datum rođenja*" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Dan" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"
      Margin="0,0,0,4" Foreground="#444444" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="DayTextBox" Grid.Row="1" Grid.Column="2" Width="60" Height="40"
    HorizontalAlignment="Center"
    Text="{Binding Day, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
    MaxLength="2" 
    TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
    ToolTip="Unesite dan (01-31)" Padding="0" VerticalContentAlignment="Center"/>

                        <TextBlock Text="-" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" 
      HorizontalAlignment="Center" Foreground="#666666" FontSize="20" FontWeight="Bold"
      Margin="0,4,0,0"/>

                        <TextBlock Text="Mesec" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Center"
      Margin="0,0,0,4" Foreground="#444444" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="MonthTextBox" Grid.Row="1" Grid.Column="6" Width="60" Height="40"
    HorizontalAlignment="Center"
    Text="{Binding Month, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
    MaxLength="2"
    TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
    ToolTip="Unesite mesec (01-12)" Padding="0" VerticalContentAlignment="Center"/>

                        <TextBlock Text="-" Grid.Row="1" Grid.Column="8" VerticalAlignment="Center" 
      HorizontalAlignment="Center" Foreground="#666666" FontSize="20" FontWeight="Bold"
      Margin="0,4,0,0"/>

                        <TextBlock Text="Godina" Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="3" HorizontalAlignment="Center"
      Margin="0,0,0,4" Foreground="#444444" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="YearTextBox" Grid.Row="1" Grid.Column="10" Width="80" Height="40"
    HorizontalAlignment="Center"
    Text="{Binding Year, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
    MaxLength="4"
    TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
    ToolTip="Unesite godinu (npr. 2023)" Padding="0" VerticalContentAlignment="Center"/>
                    </Grid>
                </Border>

                <TextBlock Text="Mesto rođenja" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.PlaceOfBirth}" FontSize="18"/>
                </Border>

                <TextBlock Text="Adresa" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.Address}" FontSize="18"/>
                </Border>

                <TextBlock Text="Telefon" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.PhoneNo}" FontSize="18"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="40 0 0 0">
                <TextBlock Text="Ime Oca" Foreground="#34495E" Margin="0 0 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.FathersName}" FontSize="18"/>
                </Border>

                <TextBlock Text="Zanimanje Oca" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.FathersOccupation}" FontSize="18"/>
                </Border>

                <TextBlock Text="Godina rođenja Oca" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" 
                             Text="{Binding CurrentPatient.YearOfFathersBirth}" FontSize="18"
                             PreviewTextInput="NumberValidationTextBox"/>
                </Border>

                <TextBlock Text="Ime Majke" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.MothersName}" FontSize="18"/>
                </Border>

                <TextBlock Text="Zanimanje Majke" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" Text="{Binding CurrentPatient.MothersOccupation}" FontSize="18"/>
                </Border>

                <TextBlock Text="Godina rođenja Majke" Foreground="#34495E" Margin="0 30 8 0" FontWeight="SemiBold" FontSize="20"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
                    Padding="5" Effect="{StaticResource ShadowEffect}">
                    <TextBox Height="50" Padding="8" BorderThickness="0" 
                             Text="{Binding CurrentPatient.YearOfMothersBirth}" FontSize="18"
                             PreviewTextInput="NumberValidationTextBox"/>
                </Border>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
            <Button x:Name="ConfirmButton" Content="Sačuvaj izmene" Width="180" Height="55" Foreground="White"
        BorderBrush="Transparent" FontSize="20" Margin="8" Padding="8" FontWeight="Bold" 
        Click="ConfirmButton_Click">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#27AE60" Offset="0"/>
                        <GradientStop Color="#2ECC71" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button x:Name="PonistiButton" Content="Poništi" Width="180" Height="55" Foreground="White"
        BorderBrush="Transparent" FontSize="20" Margin="8" Padding="8" FontWeight="Bold"
        Click="PonistiButton_Click">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E74C3C" Offset="0"/>
                        <GradientStop Color="#C0392B" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>