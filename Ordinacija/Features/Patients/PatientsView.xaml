<Window x:Class="Ordinacija.Features.Patients.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
            Title="Pregled pacijenata"
             WindowState="Maximized" MinHeight="600" MinWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- "Dodaj pacijenta" Button -->
            <Button Content="Dodaj pacijenta"
            Padding="12,6"
            Background="#0078D7"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Cursor="Hand"
            Width="180"
            Height="40"
            Click="AddPatient_Click"
            Grid.Column="0"/>

            <!-- Search Box with Built-in Search Icon -->
            <Border Grid.Column="2" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- TextBox -->
                        <ColumnDefinition Width="50"/>
                        <!-- Icon -->
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="Black"
                        FontSize="16"
                        Padding="12,0,12,0"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalContentAlignment="Center"
                        Height="40"
                        Width="500"/>

                    <!-- Built-in Search Icon -->
                    <TextBlock Text="&#xE721;" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="18"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="1"
                       Foreground="Gray"/>
                </Grid>
            </Border>

            <!-- "Doctors" Button -->
            <Button Content="Pregled doktora"
            Padding="12,6"
            Background="#28A745"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Cursor="Hand"
            Width="140"
            Height="40"
            Click="Doctors_Click"
            Grid.Column="4"/>
        </Grid>


        <!-- Patient Table -->
        <Border Background="White" 
                CornerRadius="12" 
                Padding="15" 
                Margin="0,20,0,0"
                BorderBrush="Gray" 
                BorderThickness="1"
                Grid.Row="1">

            <ListView x:Name="PatientsListView" 
                      SelectionMode="Single"
                      ItemsSource="{Binding FilteredPatients}" 
                      SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#0078D7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ime" DisplayMemberBinding="{Binding FirstName}" Width="450"/>
                        <GridViewColumn Header="Prezime" DisplayMemberBinding="{Binding LastName}" Width="450"/>
                        <GridViewColumn Header="Datum rođenja" Width="250">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="DateOfBirth" StringFormat="dd.MM.yyyy."/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Width="280">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                                        <!-- Edit Patient Button (Now First) -->
                                        <Button Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            Click="EditPatient_Click"
                                            ToolTip="Izmeni podatke o pacijentu"
                                            CommandParameter="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE104;"
                                                   FontSize="20"
                                                   Foreground="#0078D7"/>
                                        </Button>

                                        <!-- Empty Space -->
                                        <Rectangle Width="20"/>

                                        <!-- Add New Medical Report Button -->
                                        <Button x:Name="AddNewMedicalReportButton" 
                                            Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            ToolTip="Dodaj nalaz"
                                            Click="AddNewMedicalReportButton_Click"
                                            CommandParameter="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE710;" 
                                                   FontSize="20"
                                                   Foreground="#28A745"/>
                                        </Button>

                                        <!-- Medical Reports Button -->
                                        <Button Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            Margin="10,0,0,0"
                                            ToolTip="Otvori nalaze"
                                            Click="OpenMedicalReports_Click"
                                            CommandParameter="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE130;" 
                                                   FontSize="20"
                                                   Foreground="#28A745"/>
                                        </Button>

                                        <!-- Print Button -->
                                        <Button x:Name="PrintButton"
                                            Padding="5"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            Margin="10,0,0,0"
                                            ToolTip="Štampanje potvrde"
                                            Click="PrintButton_Click"
                                            CommandParameter="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE749;" 
                                                   FontSize="20"
                                                   Foreground="#D9534F"/>
                                        </Button>

                                    </StackPanel>

                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>

</Window>
