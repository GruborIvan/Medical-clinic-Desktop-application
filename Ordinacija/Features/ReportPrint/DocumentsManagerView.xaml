<Window x:Class="Ordinacija.Features.ReportPrint.DocumentsManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Štampanje potvrda" WindowState="Maximized">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Document Type Selection -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Tip dokumenta:" Margin="0,0,0,10" FontSize="18" FontWeight="SemiBold"/>
            <ComboBox 
                Name="DocumentTypesComboBox"
                Height="50"
                Background="#F0F0F0"
                Padding="12"
                BorderBrush="Gray"
                BorderThickness="1"
                ItemsSource="{Binding DocumentTypes}"
                DisplayMemberPath="."
                SelectedValue="{Binding SelectedDocumentType, Mode=TwoWay}" 
                FontSize="16"
                SelectionChanged="DocumentTypesComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Main Text Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="25" 
                Margin="0,0,0,30">
            <TextBox Name="SchemaTextBox"
                     Text="{Binding FormText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="25"
                     FontFamily="Segoe UI"
                     Foreground="Black"
                     Background="#F0F0F0"
                     BorderBrush="Gray"
                     BorderThickness="1"/>
        </Border>

        <!-- Doctor Selection -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Doktor:" Margin="0,0,0,10" FontSize="18" FontWeight="SemiBold"/>
            <ComboBox Name="DoctorComboBox"
                      Height="50"
                      Background="#F0F0F0"
                      Padding="12"
                      BorderBrush="Gray"
                      BorderThickness="1"
                      ItemsSource="{Binding Doctors}"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="AcSubject"
                      SelectedValue="{Binding CurrentMedicalReport.DoctorId, Mode=TwoWay}"
                      FontSize="16"
                      SelectionChanged="ComboBox_SelectionChanged"
                      Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,40,0,30">
            <Button Name="SaveButton"
                    Content="Štampanje"
                    Width="200"
                    Height="60"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding SaveReportCommand}" 
                    Click="SaveButton_Click"/>

            <Button Name="CancelButton"
                    Content="Nazad"
                    Width="200"
                    Height="60"
                    Background="#F44336"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding CancelCommand}"
                    Margin="30,0,0,0" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>