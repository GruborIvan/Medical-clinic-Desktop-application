<Window x:Class="Ordinacija.Features.Doctors.AddNewDoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Doctor form" Height="650" Width="500">
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
        <DropShadowEffect x:Key="ButtonShadowEffect" BlurRadius="8" Opacity="0.3" ShadowDepth="3"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TitleText}" FontSize="26" FontWeight="Bold" Foreground="#333" 
                   Margin="0 0 0 30" HorizontalAlignment="Center"/>

        <!-- Doctor Information Form -->
        <StackPanel Grid.Row="1" Margin="0 20 0 20">
            <TextBlock Text="Ime*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.FirstName}"/>
            </Border>
            <TextBlock Height="20"/>

            <TextBlock Text="Prezime*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.LastName}"/>
            </Border>
            <TextBlock Height="20"/>

            <TextBlock Text="Datum rođenja*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" 
Padding="5" Effect="{StaticResource ShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Day Section -->
                    <TextBlock Text="Dan" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"
  Margin="0,0,0,4" Foreground="#444444" FontSize="14" FontWeight="SemiBold"/>
                    <TextBox x:Name="DayTextBox" Grid.Row="1" Grid.Column="2" Width="60" Height="40"
HorizontalAlignment="Center"
Text="{Binding Day, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
MaxLength="2" 
TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
ToolTip="Unesite dan (01-31)" Padding="0" VerticalContentAlignment="Center"/>

                    <!-- Separator 1 -->
                    <TextBlock Text="-" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" 
  HorizontalAlignment="Center" Foreground="#666666" FontSize="20" FontWeight="Bold"
  Margin="0,4,0,0"/>

                    <!-- Month Section -->
                    <TextBlock Text="Mesec" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" HorizontalAlignment="Center"
  Margin="0,0,0,4" Foreground="#444444" FontSize="14" FontWeight="SemiBold"/>
                    <TextBox x:Name="MonthTextBox" Grid.Row="1" Grid.Column="6" Width="60" Height="40"
                        HorizontalAlignment="Center"
                        Text="{Binding Month, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        MaxLength="2"
                        TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
                        ToolTip="Unesite mesec (01-12)" Padding="0" VerticalContentAlignment="Center"/>

                    <!-- Separator 2 -->
                    <TextBlock Text="-" Grid.Row="1" Grid.Column="8" VerticalAlignment="Center" 
                        HorizontalAlignment="Center" Foreground="#666666" FontSize="20" FontWeight="Bold"
                        Margin="0,4,0,0"/>

                    <!-- Year Section -->
                    <TextBlock Text="Godina" Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                        Margin="0,0,0,4" Foreground="#444444" FontSize="14" FontWeight="SemiBold"/>
                    <TextBox x:Name="YearTextBox" Grid.Row="1" Grid.Column="10" Width="80" Height="40"
                        HorizontalAlignment="Center"
                        Text="{Binding Year, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                        MaxLength="4"
                        TextAlignment="Center" FontSize="18" BorderThickness="1" BorderBrush="#999999"
                        ToolTip="Unesite godinu (npr. 2023)" Padding="0" VerticalContentAlignment="Center"/>
                </Grid>
            </Border>

            <TextBlock Height="20"/>

            <TextBlock Text="Telefon" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.PhoneNo}"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
            <Button x:Name="ConfirmButton" Content="Sačuvaj izmene" Width="160" Height="45" Background="#4CAF50" Foreground="White" 
                    BorderBrush="Transparent" FontSize="18" Margin="8" Padding="8" FontWeight="Bold" Click="ConfirmButton_Click"/>

            <Button x:Name="PonistiButton" Content="Poništi" Width="160" Height="45" Background="#F44336" Foreground="White" 
                    BorderBrush="Transparent" FontSize="18" Margin="8" Padding="8" FontWeight="Bold" Click="PonistiButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
