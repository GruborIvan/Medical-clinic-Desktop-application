<Window x:Class="Ordinacija.Features.Doctors.AddNewDoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Doctor form" Height="650" Width="500">
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" Opacity="0.2" ShadowDepth="2"/>
        <DropShadowEffect x:Key="ButtonShadowEffect" BlurRadius="8" Opacity="0.3" ShadowDepth="3"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TitleText}" FontSize="26" FontWeight="Bold" Foreground="#333" 
                   Margin="0 0 0 30" HorizontalAlignment="Center"/>

        <!-- Doctor Information Form -->
        <StackPanel Grid.Row="1" Margin="0 20 0 20">
            <TextBlock Text="Ime*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.FirstName}"/>
            </Border>
            <TextBlock Height="20"/>

            <TextBlock Text="Prezime*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.LastName}"/>
            </Border>
            <TextBlock Height="20"/>

            <TextBlock Text="Datum rođenja*" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <DatePicker 
        Height="40" 
        Padding="8" 
        BorderThickness="0" 
        SelectedDate="{Binding CurrentDoctor.DateOfBirth}">

                    <!-- Override the inner TextBox to enforce "dd.MM.yyyy." format -->
                    <DatePicker.Resources>
                        <Style TargetType="{x:Type DatePickerTextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <TextBox 
                                Text="{Binding 
                                    Path=SelectedDate, 
                                    RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, 
                                    StringFormat=dd.MM.yyyy.}"
                            />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </Border>
            <TextBlock Height="20"/>

            <TextBlock Text="Telefon" Foreground="#555" Margin="0 0 8 0"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                <TextBox Height="40" Padding="8" BorderThickness="0" Text="{Binding CurrentDoctor.PhoneNo}"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
            <Button x:Name="ConfirmButton" Content="Sačuvaj izmene" Width="160" Height="45" Background="#4CAF50" Foreground="White" 
                    BorderBrush="Transparent" FontSize="18" Margin="8" Padding="8" FontWeight="Bold" Click="ConfirmButton_Click"/>

            <Button x:Name="PonistiButton" Content="Poništi" Width="160" Height="45" Background="#F44336" Foreground="White" 
                    BorderBrush="Transparent" FontSize="18" Margin="8" Padding="8" FontWeight="Bold" Click="PonistiButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
