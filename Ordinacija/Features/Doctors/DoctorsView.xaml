<Window x:Class="Ordinacija.Features.Doctors.DoctorsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DoctorsView" 
        WindowState="Maximized" MinHeight="600" MinWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- "Dodaj doktora" Button -->
            <Button Content="Dodaj novog doktora"
            Padding="12,6"
            Background="#0078D7"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            Cursor="Hand"
            Width="180"
            Height="40"
            Click="AddDoctor_Click"
            Grid.Column="0"/>
        </Grid>

        <!-- Doctors Table -->
        <Border Background="White" 
                CornerRadius="12" 
                Padding="15" 
                Margin="0,20,0,0"
                BorderBrush="Gray" 
                BorderThickness="1"
                Grid.Row="1">

            <ListView x:Name="DoctorsListView" 
                      SelectionMode="Single"
                      ItemsSource="{Binding Doctors}" 
                      SelectedItem="{Binding SelectedDoctor, Mode=TwoWay}"
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#0078D7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ime" DisplayMemberBinding="{Binding FirstName}" Width="500"/>
                        <GridViewColumn Header="Prezime" DisplayMemberBinding="{Binding LastName}" Width="500"/>
                        <GridViewColumn Header="Datum rođenja" Width="300">
                            <GridViewColumn.DisplayMemberBinding>
                                <Binding Path="DateOfBirth" StringFormat="{}{0:dd.MM.yyyy.}"/>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Padding="5"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Cursor="Hand"
                                                Click="EditDoctorButton_Click"
                                                CommandParameter="{Binding}">
                                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE104;"
                                                       FontSize="20"
                                                       Foreground="#0078D7"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>

</Window>
