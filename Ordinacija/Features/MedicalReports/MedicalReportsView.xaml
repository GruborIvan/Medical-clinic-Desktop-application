<Window x:Class="Ordinacija.Features.MedicalReports.MedicalReportsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Background="#F5F5F5"
        xmlns:models="clr-namespace:Ordinacija.Features.MedicalReports.Models"
        Title="Prikaz nalaza po pacijentu" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Left Panel: Patient Details -->
        <Border Grid.Column="0" Background="#E3E3E3" Padding="20" CornerRadius="10" Margin="10">
            <StackPanel>
                <!-- Green Back Button -->
                <Button x:Name="BackButton"
                    Width="220"
                    Height="40"
                    Padding="12,6"
                    Background="#4CAF50" 
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Path Data="M15 18L9 12L15 6" 
                      Stroke="White" 
                      StrokeThickness="2" 
                      Stretch="Uniform"
                      Margin="0,0,8,0"/>
                        <TextBlock Text="Povratak na listu pacijenata" 
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <TextBlock Text="Podaci o pacijentu" FontSize="20" FontWeight="Bold" Margin="0 0 0 30"/>
                <Separator Margin="0 10"/>
                <TextBlock Text="Ime:" FontWeight="Bold" FontSize="14" />
                <TextBlock Text="{Binding Patient.LastName}" FontSize="14" Margin="0 0 0 25"/>
                <TextBlock Text="Prezime:" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding Patient.FirstName}" FontSize="14" Margin="0 0 0 25"/>
                <TextBlock Text="Datum rođenja:" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding Patient.DateOfBirth, StringFormat=\{0:dd.MM.yyyy\}}" FontSize="14" Margin="0 0 0 25"/>
            </StackPanel>
        </Border>

        <!-- Right Panel: Medical Report -->
        <Border Grid.Column="1" Padding="15" CornerRadius="10" Background="White" Margin="5">
            <StackPanel>
                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nalaz" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Add New UZ Button -->
                        <Button Name="AddNewUZButton"  
            Width="150" 
            Height="30"  
            Margin="0,0,10,0"
            VerticalAlignment="Center"  
            Background="#2196F3"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            BorderThickness="0" 
            Padding="12,8"
            Cursor="Hand"
            Click="AddNewUZButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                Text="Dodaj novi UZ" 
                VerticalAlignment="Center" 
                Margin="0,0,8,0"
                FontSize="14"
                Foreground="White"/>
                                <TextBlock 
                FontFamily="Segoe MDL2 Assets" 
                Text="&#xE710;" 
                FontSize="16" 
                VerticalAlignment="Center"
                Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <!-- Add New Medical Report Button -->
                        <Button Name="AddNewMedicalReportButton"  
            Width="160" 
            Height="30"  
            Margin="0,0,10,0"
            VerticalAlignment="Center"  
            Background="#2196F3"
            Foreground="White"
            FontWeight="Bold"
            BorderBrush="Transparent"
            BorderThickness="0" 
            Padding="12,8"
            Cursor="Hand"
            Command="{Binding AddNewReportCommand}"  
            Click="AddNewMedicalReportButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                Text="Dodaj novi nalaz" 
                VerticalAlignment="Center" 
                Margin="0,0,8,0"
                FontSize="14"
                Foreground="White"/>
                                <TextBlock 
                FontFamily="Segoe MDL2 Assets" 
                Text="&#xE710;" 
                FontSize="16" 
                VerticalAlignment="Center"
                Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Print Button -->
                    <!-- Print Button -->
                    <Button Name="PrintButton"
        Grid.Column="2" 
        Width="110" 
        Height="30" 
        VerticalAlignment="Center" 
        Background="#F44336"
        Foreground="White"
        FontWeight="Bold"
        BorderBrush="Transparent"
        BorderThickness="0" 
        Padding="12,8"
        Cursor="Hand"
        Command="{Binding PrintReportCommand}"
        Click="PrintButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                Text="Štampaj" 
                                VerticalAlignment="Center" 
                                Margin="0,0,8,0"
                                FontSize="14"
                                Foreground="White"/>
                        <TextBlock 
                                FontFamily="Segoe MDL2 Assets" 
                                Text="&#xE749;" 
                                FontSize="16" 
                                VerticalAlignment="Center"
                                Foreground="White"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Border Background="White" CornerRadius="10" Padding="5" Margin="0">
                    <StackPanel>
                        <!-- Date Section -->
                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- First column: Label -->
                            <TextBlock Text="Datum nalaza:" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>

                            <!-- Second column: Date -->
                            <TextBlock Text="{Binding CurrentMedicalReport.DateOfReport, StringFormat='{}{0:dd.MM.yyyy}'}" 
                       Grid.Column="1" VerticalAlignment="Center" Margin="15,0,40,0" FontSize="16"/>

                            <!-- Third column: Edit button -->
                            <Button Name="EditMedicalReportButton" 
                                    Grid.Column="2" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Right" 
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="Transparent"
                                    BorderThickness="0" 
                                    Padding="12,8"
                                    Cursor="Hand"
                                    Margin="0 10 0 0"
                                    Click="EditMedicalReportButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock 
                                        Text="Uredi nalaz" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,8,0"
                                        FontSize="14"
                                        Foreground="White"/>

                                    <TextBlock 
                                        FontFamily="Segoe MDL2 Assets" 
                                        Text="&#xE70F;" 
                                        FontSize="16" 
                                        VerticalAlignment="Center"
                                        Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Anamneza i fizikalni nalaz -->
                        <TextBlock Text="Anamneza i fizikalni nalaz:" FontWeight="Bold" FontSize="16" Margin="0 5 0 15"/>
                        <Border Background="#F0F0F0" Padding="15" CornerRadius="5" Margin="0 0 0 15" Height="250">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding CurrentMedicalReport.Anamneza}" TextWrapping="Wrap" FontSize="14"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Dijagnoza Field -->
                        <TextBlock Text="Dijagnoza:" FontWeight="Bold" FontSize="16" Margin="0 5 0 15"/>
                        <Border Background="#F0F0F0" Padding="15" CornerRadius="5" Margin="0 0 0 15" Height="90">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding CurrentMedicalReport.DG}" TextWrapping="Wrap" FontSize="14"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Terapija Field -->
                        <TextBlock Text="Terapija:" FontWeight="Bold" FontSize="16" Margin="0 5 0 15"/>
                        <Border Background="#F0F0F0" Padding="15" CornerRadius="5" Margin="0 0 0 15" Height="160">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding CurrentMedicalReport.TH}" TextWrapping="Wrap" FontSize="14"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Napomene lekara Field -->
                        <TextBlock Text="Napomene lekara:" FontWeight="Bold" FontSize="16" Margin="0 5 0 15"/>
                        <Border Background="#F0F0F0" Padding="15" CornerRadius="5" Margin="0 0 0 15" Height="90">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding CurrentMedicalReport.Control}" TextWrapping="Wrap" FontSize="14"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Potpis doktora Field -->
                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Potpis doktora:" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="{Binding CurrentMedicalReport.DoctorName}" Grid.Column="1" VerticalAlignment="Center" FontSize="16"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20 0 20">
            <!-- Previous Button -->
            <Button Content="◀" Width="35" Height="35" FontSize="18" 
            Command="{Binding PreviousReportCommand}" />

            <!-- Page Counter -->
            <TextBlock Text="{Binding CurrentReportPage, StringFormat='{}{0} / '}" FontSize="16" Margin="10 0"/>
            <TextBlock Text="{Binding TotalReports}" FontSize="16" Margin="0 0 10 0"/>


            <!-- Next Button with MultiBinding -->
            <Button Content="▶" Width="35" Height="35" FontSize="18"
            Command="{Binding NextReportCommand}">
            </Button>
        </StackPanel>


    </Grid>
</Window>
